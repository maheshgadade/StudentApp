<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<welcome-file-list>
		<welcome-file>jsp/student.jsp</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>StudentServlet</servlet-name>
		<servlet-class>com.student.controller.StudentController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>StudentServlet</servlet-name>
		<url-pattern>/addStudent</url-pattern>
	</servlet-mapping>
</web-app>    
